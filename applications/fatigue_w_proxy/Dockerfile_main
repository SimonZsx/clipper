RUN pip3 install opencv-python
RUN pip3 install grpcio
RUN pip3 install protobuf

#docker 2
RUN pip3 install scipy
RUN pip3 install imutils
RUN pip3 install cMake
RUN pip3 install dlib

#docker 3
RUN pip3 install scikit-image
RUN pip3 install Cython
RUN pip3 install pycocotools
RUN pip3 install git+https://github.com/philferriere/cocoapi.git#egg=pycocotools^&subdirectory=PythonAPI
RUN pip3 install keras
RUN pip3 install imgaug
#docker 4 none
#add
ADD FatigueDetection/container1/app /container/
ADD FatigueDetection/container2/app /container/
ADD FatigueDetection/container3/app /container/
ADD FatigueDetection/container4/app /container/
ADD FatigueDetection/main.py /container/
ADD FatigueDetection/part1 /container/part1

CMD ["python3","/container/main.py"]

