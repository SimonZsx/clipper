# docker build -f ./sentiment_w_proxy/Dockerfile3 -t sentiment_w_proxy:c3 .
# docker run -p 10000:10000 -it sentiment_w_proxy:c3

FROM ubuntu:18.04

RUN apt-get update && apt-get install python3 python3-pip -y
RUN pip3 install -U textblob  
RUN python3 -m textblob.download_corpora

ADD sentiment_w_proxy/c3_sentimentAnalyzing/app /container/app

WORKDIR /container/app
RUN python3 predict.py

WORKDIR /container